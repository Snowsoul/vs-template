{
    "name": "vs-generator",
    "publisher": "Adrian Bindiu",
    "displayName": "vs-generator",
    "description": "Generates new templates based on a generic template",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.generateVsTemplate"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.generateVsTemplate",
                "title": "Generate VS Template"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.generateVsTemplate",
                    "group": "VSTemplateGroup@1"
                }
            ]
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "eslint": "^4.11.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}